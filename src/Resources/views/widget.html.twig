<div id="hch-chatbot-widget" class="closed">
    <button id="chat-toggle" class="chat-toggle-btn">
        <span class="open-icon">ðŸ’¬</span>
        <span class="close-icon">Ã—</span>
    </button>
    
    <div class="chat-container">
        <div class="chat-header">
            <h3>Assistant</h3>
            <button class="minimize-btn">âˆ’</button>
        </div>
        <div id="chat-messages"></div>
        <form id="chat-form">
            <input type="text" id="message" name="message" required placeholder="Votre message...">
            <button type="submit">
                <svg width="20" height="20" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
                </svg>
            </button>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const widget = document.getElementById('hch-chatbot-widget');
        const toggleBtn = document.getElementById('chat-toggle');
        const minimizeBtn = document.querySelector('.minimize-btn');
        const form = document.getElementById('chat-form');
        const messages = document.getElementById('chat-messages');
        let conversationId = null;

        // Gestion ouverture/fermeture
        toggleBtn.addEventListener('click', () => {
            widget.classList.toggle('closed');
        });

        minimizeBtn.addEventListener('click', () => {
            widget.classList.add('closed');
        });

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const message = document.getElementById('message').value;
            
            messages.innerHTML += `<div class="user-message">${message}</div>`;
            messages.scrollTop = messages.scrollHeight;
            
            try {
                const response = await fetch('/hch_chatbot/chat', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: new URLSearchParams({
                        message: message,
                        conversation_id: conversationId
                    })
                });
                
                const data = await response.json();
                if (data.error) {
                    messages.innerHTML += `<div class="error-message">${data.error}</div>`;
                } else {
                    messages.innerHTML += `<div class="bot-message">${data.response}</div>`;
                    conversationId = data.conversation_id;
                }
                messages.scrollTop = messages.scrollHeight;
            } catch (error) {
                messages.innerHTML += `<div class="error-message">Une erreur est survenue</div>`;
            }

            document.getElementById('message').value = '';
        });
    });
</script>

